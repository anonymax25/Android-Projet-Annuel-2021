<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.esgi.androidburgerproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.AndroidBurgerProject">
        <activity android:name=".cart.CartActivity" />
        <activity android:name=".catalog.CatalogActivity" />
        <activity android:name=".checkout.OrderActivity"/>
        <activity android:name=".checkout.ShippingActivity"/>
        <activity android:name=".profile.ProfileActivity"/>
        <activity android:name=".profile.OrderHistoryActivity"/>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SubscribeActivity" />
        <activity android:name=".MainActivity" />
    </application>
</manifest>